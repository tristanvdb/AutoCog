// Simple enum record
record Response {
    annotate "Response classification types";
    is enum("affirmative", "negative", "uncertain", "not_applicable");
}

// Parameterized record for reusable structures
record Thoughts {
    argument N_min = 5;
    argument N_max = 10;
    argument L = 100;
    
    annotate f"Thought array with {N_min} to {N_max} items, max length {L}";
    
    is {
        thought[N_min:N_max] is text;
        summary is text;
    }
}

