format sentence {
    is text<20, beams=5, width=3>;
    annotate f"Single well formed sentence in correct english";
}

format boolean {
    is enum("True","False");
    annotate f"A boolean value to specify True or False";
}

prompt main {
    is {
        statement is sentence;
        correct is boolean;
    }
    channel {
        to .statement from ?statement;
    }
    return {
        from .correct;
    }
    annotate {
        _ as "You are verifying whether statements are True or False.";
        .statement as "The statement that you must verify. It is a single sentence.";
        .correct   as "Your decision whether the statement is True or False.";
    }
}
